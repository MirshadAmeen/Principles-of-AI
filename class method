# Define a class named 'Car'
class Car:
    # Constructor method to initialize the class attributes
    def __init__(self, make, model, year):
        self.make = make    # Instance variable for car make
        self.model = model  # Instance variable for car model
        self.year = year    # Instance variable for car year
    
    # Method to display car information
    def display_info(self):
        print(f"Car: {self.year} {self.make} {self.model}")

# Example usage of the Car class
if __name__ == "__main__":
    # Creating instances of Car
    car1 = Car("Toyota", "Camry", 2022)
    car2 = Car("Honda", "Accord", 2023)
    
    # Calling method to display car information
    car1.display_info()
    car2.display_info()
