class FileContentManager:
    def __init__(self, filename, mode='r'):
        self.filename = filename
        self.mode = mode
        self.file = None
    
    def __enter__(self):
        self.file = open(self.filename, self.mode)
        return self.file
    
    def __exit__(self, exc_type, exc_val, exc_tb):
        if self.file:
            self.file.close()

# Example usage:
filename = 'example.txt'

# Using the context manager to read from a file
with FileContentManager(filename) as f:
    for line in f:
        print(line.strip())
