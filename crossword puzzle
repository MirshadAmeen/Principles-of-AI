def solve_crossword(words):
    # Initialize an empty grid
    grid_size = 10
    grid = [[' ' for _ in range(grid_size)] for _ in range(grid_size)]
    
    # Try placing each word in the list
    for word in words:
        word_placed = False
        
        # Try placing word horizontally (across)
        for r in range(grid_size):
            for c in range(grid_size - len(word) + 1):
                if all(grid[r][c+i] == ' ' or grid[r][c+i] == word[i] for i in range(len(word))):
                    for i in range(len(word)):
                        grid[r][c+i] = word[i]
                    word_placed = True
                    break
            if word_placed:
                break
        
        if not word_placed:
            # Try placing word vertically (down)
            for c in range(grid_size):
                for r in range(grid_size - len(word) + 1):
                    if all(grid[r+i][c] == ' ' or grid[r+i][c] == word[i] for i in range(len(word))):
                        for i in range(len(word)):
                            grid[r+i][c] = word[i]
                        word_placed = True
                        break
                if word_placed:
                    break
        
        if not word_placed:
            print(f"Cannot place word '{word}' in the grid.")
    
    return grid

# Example usage:
words = ['hello', 'world', 'python', 'crossword', 'puzzle']
puzzle_grid = solve_crossword(words)

# Print the solved puzzle grid
for row in puzzle_grid:
    print(' '.join(row))
